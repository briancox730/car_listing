<%= form_for @car do |f| %>
  <% if @car.errors.any? %>
    <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :manufacturer_id %>
  <%= f.collection_select :manufacturer_id, Manufacturer.all, :id, :name %>

  <%= f.label :color %>
  <%= f.text_field :color%>

  <%= f.label :year %>
  <%= f.text_field :year%>

  <%= f.label :mileage %>
  <%= f.text_field :mileage%>

  <%= f.label :description %>
  <%= f.text_field :description%>

  <%= f.submit 'Add Car' %>

<% end %>
